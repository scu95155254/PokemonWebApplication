<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - 寶可夢查詢網站</title>

    <!-- 引入 Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- 引入自定義樣式 -->
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <!-- 導航列 -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">寶可夢查詢網站</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Pokemon")">查詢寶可夢</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">關於</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">聯絡我們</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 主要內容 -->
    <div class="container mt-4">
        <main role="main" class="content-wrapper">
            @RenderBody()  <!-- 各個頁面的主要內容會渲染在這裡 -->
        </main>
    </div>

    <!-- 頁腳 -->
    <footer class="bg-light text-center text-lg-start mt-auto">
        <div class="text-center p-3">
            &copy; @DateTime.Now.Year - 寶可夢查詢網站. All rights reserved.
        </div>
    </footer>

    <!-- 引入 Bootstrap JS 和 Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)  <!-- 允許頁面在需要時引入額外的JS腳本 -->
</body>
</html>
